{
  "name": "react-magnifier-gallery",
  "version": "1.0.0",
  "description": "Simple react photos gallery component with magnifier",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build:commonjs": "babel src/ --out-dir lib/ --ignore __tests__",
    "build:umd": "webpack --config webpack.build.js",
    "build:umd:min": "cross-env MINIFY=1 webpack --config webpack.build.js",
    "build": "yarn run clean && yarn run build:commonjs",
    "bundle": "mkdir -p dist && yarn run build:umd && yarn run build:umd:min",
    "lint": "eslint src",
    "test": "jest --env=jsdom",
    "precommit": "npm run lint && npm run test",
    "start": "webpack-dev-server --inline --content-base examples/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaohuij/react-magnifier-gallery.git"
  },
  "author": "xiaohui ji",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0",
    "cross-env": "^5.0.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-flowtype": "^2.21.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-loader": "^0.4.5",
    "img-loader": "^2.0.0",
    "jest": "^19.0.2",
    "jest-enzyme": "^3.0.0",
    "node-sass": "^4.5.3",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.5.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.13.1",
    "uglifyjs-webpack-plugin": "^0.4.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.10",
    "react": "^15.4.2"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.(test|spec)\\.js$",
    "moduleFileExtensions": [
      "jsx",
      "js"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "<rootDir>/jest/CSSStub.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/(dist|examples|node_modules|lib)/"
    ],
    "testEnvironment": "node"
  }
}
